<Window x:Class="JordyP1_Apl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JordyP1_Apl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Menu Height = "20" VerticalAlignment="Top">
                <MenuItem Header= "Registros">
                    <MenuItem x:Name="RegistroPersona" Header="Registro Persona" ></MenuItem>
                    <MenuItem x:Name="RegistroPrestamo" Header="Registro Prestamo" ></MenuItem>
                </MenuItem>

                <MenuItem Header= "Consultas">
                    <MenuItem x:Name="ConsultaPersona" Header="Consulta Persona" ></MenuItem>
                    <MenuItem x:Name="ConsultaPrestamo" Header="Consulta Prestamo"></MenuItem>
                </MenuItem>
            </Menu>
        </StackPanel>       
    </Grid>
</Window>
